pipeline{
    agent any
	tools {
		maven 'Maven352'
	}
	stages{
		stage('Checkout'){
			steps {
				git 'https://ShaktiPrasadaPanda@gitserver.fairisaac.com:8443/scm/ompto/shaktirepo.git'
			}			
		}
		stage('Build') {
			steps {
				sh 'mvn clean compile'
			}					
		}
		stage('Test') {
			steps {
				sh 'mvn test'
				junit '**/target/surefire-reports/TEST-*.xml'
				archive 'target/*.jar'
			}
		}
		stage('Package') {
			steps {
				sh 'mvn package'
			}
		}
		
		stage('Sonar Scan') {
			steps {
				sh 'mvn sonar:sonar'
			}
		}
		
	}
}